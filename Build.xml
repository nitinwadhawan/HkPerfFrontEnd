<?xml version="1.0"?>
<project default="war" name="HkPerfGraphs" basedir=".">
    <path id="compile.classpath">
        <fileset dir="${basedir}/lib">
            <include name="*.jar"/>
        </fileset>
    </path>
    <target name="init">
        <mkdir dir="${basedir}/build/classes"/>
        <mkdir dir="${basedir}/dist"/>
    </target>
    <target name="compile" depends="init">
        <javac srcdir="src" debug="true" destdir="${basedir}/build/classes">
            <classpath refid="compile.classpath"/>
        </javac>
    </target>

    <target name="war" depends="compile">
        <war webxml="${basedir}/web/WEB-INF/web.xml" destfile="${basedir}/dist/HkPerfGraph.war">
            <fileset dir="${basedir}/web"/>
            <lib dir="${basedir}/lib"/>
            <classes dir="build/classes"/>
        </war>
    </target>

    <target name="clean">
        <delete dir="${basedir}/dist"/>
        <delete dir="${basedir}/build"/>
    </target>

    <target name="dev-clean" depends="clean, war"/>
</project>